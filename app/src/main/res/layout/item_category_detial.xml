<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/grid_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_zone_item"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_mid"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_comic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="名侦探柯南"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:lines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_comic_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:lines="2"
                android:ellipsize="end"
                android:text="真相永远只有一个"
                android:textSize="12sp"
                android:textColor="#4c4c4c"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_num_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="6dp"
                    android:text="青山刚昌"
                    android:textColor="#fd4b00"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_comic_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingRight="20dip"
                    android:paddingLeft="20dip"
                    android:paddingBottom="15dip"
                    android:text="947话"
                    android:textSize="12sp"
                    android:textColor="@color/color_zhonghui"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
