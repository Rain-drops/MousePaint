<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sgj.john.mousepaint">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 手机震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 允许查看当前网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MosuePaintAppication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/SGJTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".WebActivity" />
        <activity android:name=".DetialActivity" />
        <activity
            android:name=".RecommendActivity"
            android:label="@string/title_activity_recommend"
            android:theme="@style/SGJTheme" />
        <activity
            android:name=".WeekActivity"
            android:label="@string/title_activity_week"
            android:theme="@style/SGJTheme"></activity>
    </application>

</manifest>
